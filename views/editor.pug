doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Editor
        link(rel="stylesheet", href="css/editor.css")
    body 
        .editor 
            .image 
                img(src=template)

            .main-menu 
                img(src="/icons/template.svg").template
                img(src="/icons/text.svg").text
                img(src="/icons/save.svg").save 

            .text-tab 
                img(src="/icons/new-text.svg").new-text
                img(src="/icons/size.svg").size
                img(src="/icons/color.svg").color
                img(src="/icons/done.svg").done
                img(src="/icons/delete.svg").delete
                

            .font-size-subtab
                p Amount 
                input(type="range", name="" min="5" max="100" value ="20").amount

            .color-subtab 
                span(style="background : black")
                span(style="background : white")
                span(style="background : #E53935")
                span(style="background : #EF5350")
                span(style="background : #EC407A")
                span(style="background : #AD1457")
                span(style="background : #3F51B5")
                span(style="background : #1565C0")
                span(style="background : #4CAF50")
                span(style="background : #00796B")
                span(style="background : #FFC107")
                span(style="background : #FF5722")

        

        script(src = '//daybrush.com/moveable/release/latest/dist/moveable.min.js' type="text/javascript")
        script(src = 'https://cdnjs.cloudflare.com/ajax/libs/dom-to-image/2.6.0/dom-to-image.min.js' type="text/javascript")
        script(type="text/javascript" src = 'js/move.js')
        script(type="text/javascript" src = 'js/editor.js')